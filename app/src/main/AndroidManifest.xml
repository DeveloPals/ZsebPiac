<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.developals.zsebpiac">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="ZsebPiac"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".LoginActivity" android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".RegistrationActivity" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait"/>
        <activity android:name=".ForgotPasswordActivity" android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreenActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProducersListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ProducresDataActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ChooseActivity" android:screenOrientation="portrait"/>
        <activity android:name=".PList" android:screenOrientation="portrait"/>
    </application>

</manifest>