<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProducresDataActivity">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/formBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="16dp">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/trans_white_rectangle"
            android:drawableLeft="@drawable/ic_password_icon"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:hint="Név"
            android:paddingLeft="15dp"
            android:textColorHint="#d9d9d9"
            android:textSize="14sp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/trans_white_rectangle"
            android:drawableLeft="@drawable/ic_password_icon"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:hint="Őstermelő szám"
            android:paddingLeft="15dp"
            android:textColorHint="#d9d9d9"
            android:textSize="14sp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/trans_white_rectangle"
            android:drawableLeft="@drawable/ic_password_icon"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:hint="Telefonszám"
            android:paddingLeft="15dp"
            android:textColorHint="#d9d9d9"
            android:textSize="14sp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/trans_white_rectangle"
            android:drawableLeft="@drawable/ic_password_icon"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:hint="Email cím"
            android:paddingLeft="15dp"
            android:textColorHint="#d9d9d9"
            android:textSize="14sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text = "Átvételi pontok:"
            android:textSize="18sp"
            android:textColor="#fff"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text = "Jelszó módosítás:"
            android:textSize="18sp"
            android:textColor="#fff"
            />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/trans_white_rectangle"
            android:drawableLeft="@drawable/ic_password_icon"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:hint="Régi jelszó"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="#d9d9d9"
            android:textSize="14sp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/trans_white_rectangle"
            android:drawableLeft="@drawable/ic_password_icon"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:hint="Új jelszó"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="#d9d9d9"
            android:textSize="14sp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/trans_white_rectangle"
            android:drawableLeft="@drawable/ic_password_icon"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:hint="Új jelszó megerősítése"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="#d9d9d9"
            android:textSize="14sp" />



    </LinearLayout>

</RelativeLayout>